
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
        <h1 class="text-center mb-5">ユーザー一覧</h1>

        <% @users.each do |user| %>
            <div class="card mb-3">
            <div class="d-flex align-items-center card-body" style="background-color: #f8f9fa;">
                <%= image_tag user.image, class: "rounded-circle", style: "height: 70px; width: 70px; margin-right: 10px;" if user.image.attached? %>
                
                　　<h5 class="card-title" style="margin-bottom: 0;"><%= link_to user.name, user_path(user) %></h5>
            </div>
            </div>
        <% end %>
        </div>
    </div>
</div>
