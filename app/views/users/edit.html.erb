<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

        <div class="card">
            <div class="card-body">
            <h1 class="card-title text-center">Edit Profile</h1>

            <%= form_with(model: @user, local: true) do |form| %>
                <!-- Display error messages -->
                <% if @user.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                    <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                    </ul>
                </div>
                <% end %>

                <!-- Fields for editing -->
                <div class="form-group">
                <%= form.label :image %>
                <%= form.file_field :image, class: "form-control-file" %>
                </div>
                <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, class: "form-control" %>
                </div>

                <div class="form-group">
                <%= form.label :introduction %>
                <%= form.text_field :introduction, class: "form-control" %>
                </div>
                <div class="form-group">
                <%= form.label :password %>
                <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                </div>

                <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                </div>

                <!-- Submit button -->
                <div class="form-group">
                <%= form.submit "Save Changes", class: "btn btn-primary btn-block" %>
                </div>
            <% end %>
            </div>
        </div>

        </div>
    </div>
</div>
